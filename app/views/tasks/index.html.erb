<h1>Tasks: </h1>
<% @tasks.each do |task| %>
  <div>
    <%= link_to task.title, task_path(task) %> <p><%= task.done %></p>
    <p>
      <%= task.description %>
    </p>
    <%= link_to "Delete", task_path(task), method: :delete,
    data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<%= link_to "New task", new_task_path %>
